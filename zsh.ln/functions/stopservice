stopservice () {
  case "$1" in
    mysql)
      mysql.server stop
      ;;
    postgresql)
      pg_ctl -D /usr/local/var/postgres stop -s -m fast
      ;;
    mongo)
      /usrr/local/bin/mongo --nodb --eval "connect('localhost:27017/admin').shutdownServer()"
      ;;
    redis)
      killall -SIGTERM redis-server
      ;;
    sunspot-solr)
      rake sunspot:solr:stop
      ;;
  esac
}
