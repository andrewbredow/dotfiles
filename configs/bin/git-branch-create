#!/bin/bash
#
# Usage: git branch-create <branch-name>
#
# Creates a local branch, then immediately pushes and tracks a branch of the
# same name to origin.
# Shamelessly stolen from @emilford

set -e

if [ $# -eq 0 ]; then
  echo "Usage: git branch-create <branch-name>"
else
  git checkout -b "$1"
  git push -u origin "$1":"$1"
fi
